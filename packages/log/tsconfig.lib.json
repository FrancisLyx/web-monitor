{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist"
	},
	"include": ["./main.ts", "types/**/*", "src/**/*", "src/index.ts"],
	"exclude": ["src/main.ts", "src/counter.ts", "**/*.test.ts", "**/*.spec.ts"]
}
